<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- simple style specification to change text color to green and typeface to monospace -->
    <style name="Simple">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>
        
    <!-- demonstrates inheritance from parent for system defined medium size text -->
    <style name="CodeFont1" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>

    <!-- demonstrate inheritance from parent for system defined large size text -->
    <style name="CodeFont2" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    <!-- demonstrates using "dot" notation to show addition of text color 
    to parent with system defined large text -->
    <style name="CodeFont2.Red">
        <item name="android:textColor">#FF0000</item>
    </style>
    
    <!-- demonstrates using parent reference to user defined parent style -->
    <style name="Blue" parent="CodeFont2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#0000FF</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    
    
</resources>